@model PictureShare.Models.PictureModel

@{
    ViewData["Title"] = "Details";
}


<div class="container-fluid justify-content-center">
    <div class="row my-2">

        <div class="col-md-6 offset-3">
            <div class="polaroid polaroid-details">

                <img src="@Model.ImagePath">
                <div class="caption">@Model.Caption </div>
            </div>
        </div>

    </div>
    <div class="row my-2">
        <div class="col-md-6 offset-3">
            <form asp-action="Comment" method="post">

                <input name="id" value="@Model.Id" type="hidden" />
                <input class="form-control" type="text" placeholder="Add comment" name="comment" />
                <button type="submit" class="btn btn-dark w-100 mt-2">Comment</button>

            </form>

            @{
                foreach (var item in Model.Comments)
                {
                        <div class="alert alert-light mt-2" role="alert">
                            <p class="alert-heading">[@item.DTStamp] @item.User says... </p>
                            @item.Text
                        </div>

                }
            }

        </div>
    </div>
</div>


