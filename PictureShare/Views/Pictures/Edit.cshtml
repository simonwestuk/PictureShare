@model PictureShare.Models.PictureModel

@{
    ViewData["Title"] = "Edit";
}



<div class="d-flex flex-column justify-content-center align-items-center vh-85">
    <div class="card w-50 position-fixed br-0 shadow p-3">
        <div class="row">
            <div class="col-md p-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImagePath" />
                    <input type="hidden" asp-for="UserEmail" />
                    <div class="form-group">
                        <label asp-for="Caption" class="control-label"></label>
                        <input asp-for="Caption" class="form-control" />
                        <span asp-validation-for="Caption" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input rounded-pill" asp-for="Public">
                        <label class="form-check-label" asp-for="Public">Public</label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary w-100 mt-3" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
